        </activity>
        <activity android:name="desafio2018.tokenlab.com.desafiotokenlab2018.ListaJogosActivity" />
        <activity android:name="desafio2018.tokenlab.com.desafiotokenlab2018.GameViewActivity" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="desafio2018.tokenlab.com.desafiotokenlab2018.com.squareup.picasso"
